{
    "name": "rag-chatbot-frontend",
    "version": "1.0.0",
    "description": "Frontend for RAG Chatbot with code quality tools",
    "private": true,
    "type": "module",
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "stylelint": "stylelint \"**/*.css\"",
        "stylelint:fix": "stylelint \"**/*.css\" --fix",
        "quality": "npm run lint && npm run stylelint && npm run format:check",
        "quality:fix": "npm run lint:fix && npm run stylelint:fix && npm run format"
    },
    "devDependencies": {
        "eslint": "^9.17.0",
        "globals": "^15.14.0",
        "prettier": "^3.4.2",
        "stylelint": "^16.12.0",
        "stylelint-config-standard": "^36.0.1"
    }
}
